<Window x:Class="McpJikkenAppWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McpJikkenAppWindow"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="勇者のパラメータ" Height="350" Width="600" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="腕力" FontSize="60"/>
        <Slider Grid.Row="1" VerticalAlignment="Center" x:Name="ArmPower" Margin="10" Minimum="0" Maximum="100"/>

        <TextBlock Grid.Row="2" Text="脚力" FontSize="60"/>
        <Slider Grid.Row="3" VerticalAlignment="Center" x:Name="LegPower" Margin="10" Minimum="0" Maximum="200"/>
    </Grid>
</Window>
